    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <table class="table table-striped">
                    <thead>
                        <tr class="bg-primary">
                            <td>شماره مشتری</td>
                            <td>نام عبور</td>
                            <td>نام مشتری</td>
