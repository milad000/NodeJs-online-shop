                <form action="/customer/<%=data._id%>/edit" style="float:right; margin-right:5px;">
                    <button class="btn btn-warning">تغییر</button>
                </form>
                <form action="/invoice/<%=data._id%>/new" style="float:right; margin-right:5px;">
                    <button class="btn btn-success">فاکتور جدید</button>
                </form>
                <form action="/customer/invoice/<%=data._id%>" style="float:right; margin-right:5px;">
                    <button class="btn btn-info">فاکتورهای گذشته</button>
                </form>
                <form action="/customer" style="float:right;margin-right:5px;">
